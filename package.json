  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "eslint": "7.18.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "31.0.8",
    "eslint-plugin-mocha": "8.0.0",
    "lage": "0.27.0",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.19",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "typescript-formatter": "7.2.2"
  }
}
