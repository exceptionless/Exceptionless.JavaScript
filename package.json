{
  "name": "@exceptionless/monorepo",
  "private": true,
  "version": "2.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "init": "npm ci && npm run build",
    "rebuild": "npm run clean && npm run build",
    "build": "lage build --scope @exceptionless/* --no-cache --verbose --no-deps",
