{
  "name": "@exceptionless/monorepo",
  "private": true,
  "version": "2.0.0-pre",
  "license": "Apache-2.0",
  "jest": {
    "moduleNameMapper": {
      "^@exceptionless/(.*)$": "<rootDir>/packages/$1/src"
    },
    "preset": "ts-jest"
  },
  "scripts": {
    "clean": "rimraf packages/*/dist examples/*/dist",
    "build": "lage build --scope @exceptionless/* --no-cache --verbose --no-deps",
    "build:watch": "lage run build:watch --scope @exceptionless/* --no-cache --verbose --no-deps",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "test": "lage run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "eslint": "7.20.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-eslint-plugin": "^2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsdoc": "32.0.0",
    "lage": "0.29.0",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.19",
    "ts-node": "9.1.1",
    "typescript": "4.1.5",
    "typescript-formatter": "7.2.2"
  }
}
