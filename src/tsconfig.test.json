{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "bundles": {
    "exceptionless-nodespec": {
      "files": [
        "exceptionless.node.ts",

        "**/*-spec.ts",
        "**/*-nodespec.ts"
      ]
    },
    "exceptionless-browserspec": {
      "files": [
        "exceptionless.ts",

        "**/*-spec.ts",
        "**/*-browserspec.ts"
      ]
    }
  }
}
