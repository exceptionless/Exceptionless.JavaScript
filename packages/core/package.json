{
  "name": "@exceptionless/core",
  "version": "2.0.0-pre",
  "description": "JavaScript client for Exceptionless",
  "author": {
    "name": "exceptionless",
    "url": "https://exceptionless.com"
  },
  "homepage": "https://exceptionless.com",
  "keywords": [
    "exceptionless",
    "error",
    "feature",
    "logging",
    "tracking",
    "reporting"
  ],
  "repository": {
    "url": "git://github.com/exceptionless/Exceptionless.JavaScript.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/exceptionless/Exceptionless.JavaScript/issues"
  },
  "private": true,
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "jest": {
    "moduleNameMapper": {
      "^@exceptionless/(.*)$": "<rootDir>/../$1/src"
    },
    "preset": "ts-jest"
  },
  "scripts": {
    "lint": "eslint --cache --ext .ts",
    "lint:fix": "eslint --fix",
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "test": "jest"
  },
  "devDependencies": {
    "@jest/globals": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.1",
    "typescript": "4.1.5"
  }
}
